source 'http://rubygems.org'

# Compass

group :compass do
  gem 'compass', '1.0.1'
end

# Compass plugins
group :compass_plugins do
  gem 'compass-h5bp', :git => 'git://github.com/szinya/compass-h5bp.git', :tag => 'v0.1.3'
  gem 'font-stacks', '0.1.4'
  gem 'compass-960-plugin', '0.10.4', :require => 'ninesixty'
  gem 'susy', '1.0.5'
  gem 'compass_twitter_bootstrap', :git => 'git://github.com/szinya/compass-twitter-bootstrap.git', :tag => 'v2.3.2'
end

group :guard, :optional => true do
  gem 'guard'
  gem 'guard-yield'
  gem 'listen', '2.10.1'
  gem 'celluloid-io'
end
